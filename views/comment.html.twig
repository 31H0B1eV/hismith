{% extends "layout.html.twig" %}

{% block content %}
    <div class="welcome">
        {% if comment %}
            {% for c in comment %}
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-right text-center">{{ c.author }}</h3>
                        <p class="text-right">IP: {{ c.author_ip }}</p>
                    </div>
                    <div class="card-block">
                        <blockquote class="card-blockquote">
                            <p class="text-justify">{{ c.feedback }}</p>
                            <hr>
                            <footer>
                                <i class="fa fa-thumbs-o-up like" aria-hidden="true"></i> {{ c.likes }}
                                <span class="comment--date">{{ c.published_at|date("d.m.Y") }}</span>
                                <hr>
                                <a class="comment--link" href="/"><< Back to list</a>
                            </footer>
                        </blockquote>
                    </div>
                </div>
                <br>
                <nav aria-label="Page navigation" id="pagination"
                     total="{{ total }}"
                     current="{{ c.id }}">
                    <ul class="pagination justify-content-end">
                        <li class="page-item">
                            <a class="page-link" href="#" tabindex="-1" id="previousComment">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" id="nextComment">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <br>
            {% endfor %}
        {% else %}
            <h1>Nothing found!</h1>
        {% endif %}
    </div>
{% endblock %}